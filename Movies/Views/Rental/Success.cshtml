@model Rental
@using Movies.Domain.Models
@using Movies.Shared.Interfaces
@inject IRepository  _repository
@{
    ViewData["Title"] = "Succeeded payment";
    var movieID = Model.MovieID;
    var movie = _repository.GetById<Movie>(movieID);
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Successfully rented movie! You paid @movie.Price$</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <a>Go to movie page by clicking here: </a>
        <a asp-action="Details" asp-controller="Movies" asp-route-id=@this.Model.MovieID>@movie.Title </a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <input type="button" value="Watch now!" class="btn btn-primary" onclick="location.href='https://youtube.com/results?search_query=@movie.Title'" />
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <p>Your subscription for this movie is valid until @this.Model.RentEndDate</p>
    </div>
</div>
